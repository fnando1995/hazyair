{
  "name": "hazyair",
  "version": "1.0.3",
  "description": "Dust concentration monitoring tool.",
  "main": "hazyair.js",
  "scripts": {
    "postinstall": "cd public && npm install",
    "configure": "sudo npm install pm2 -g && sudo ./deploy.sh",
    "deploy": "pm2 start server.js && pm2 save && pm2 startup | grep -v PM2 | sh",
    "start": "pm2 start server.js",
    "stop": "pm2 stop server",
    "restart": "pm2 restart server"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marcin-sielski/hazyair.git"
  },
  "keywords": [
    "pm1.0",
    "pm2.5",
    "pm10",
    "dust monitoring",
    "air quality"
  ],
  "author": "Marcin Sielski",
  "license": "MIT",
  "dependencies": {
    "berkeleydb": "^0.2.1",
    "cron": "^1.3.0",
    "express": "^4.16.2",
    "moment": "^2.20.1",
    "plantower": "^1.1.6",
    "yargs": "^10.0.3"
  }
}
